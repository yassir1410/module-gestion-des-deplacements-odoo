<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Vue liste des villes -->
  <record id="view_travel_city_tree" model="ir.ui.view">
    <field name="name">travel.city.tree</field>
    <field name="model">travel.city</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="country_id"/>
        <field name="postal_code"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- Vue formulaire des villes -->
  <record id="view_travel_city_form" model="ir.ui.view">
    <field name="name">travel.city.form</field>
    <field name="model">travel.city</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name" placeholder="Ex: Paris, Casablanca, Madrid..."/>
              <field name="country_id"/>
            </group>
            <group>
              <field name="postal_code" placeholder="Ex: 75001, 20000, 28001..."/>
              <field name="active"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vue recherche des villes -->
  <record id="view_travel_city_search" model="ir.ui.view">
    <field name="name">travel.city.search</field>
    <field name="model">travel.city</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" string="Ville"/>
        <field name="country_id" string="Pays"/>
        <field name="postal_code" string="Code postal"/>
        <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
        <filter string="Inactives" name="inactive" domain="[('active', '=', False)]"/>
        <group expand="0" string="Grouper par">
          <filter string="Pays" name="group_country" context="{'group_by': 'country_id'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Action pour les villes -->
  <record id="action_travel_city" model="ir.actions.act_window">
    <field name="name">Villes de destination</field>
    <field name="res_model">travel.city</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'search_default_active': 1}</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">Créer une nouvelle ville de destination.</p>
      <p>
        Gérez ici les villes de destination disponibles pour les déplacements.
        Chaque ville est associée à un pays et peut avoir un code postal.
      </p>
    </field>
  </record>

  <!-- Menu pour les villes -->
  <menuitem id="menu_travel_cities" 
            name="Villes" 
            parent="menu_employee_travel_root" 
            action="action_travel_city"
            groups="employee_travel.group_travel_manager,employee_travel.group_travel_daf"/>

</odoo>